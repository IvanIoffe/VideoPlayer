<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ItemVideo.Root" parent="Base.Theme.VideoPlayer">
        <item name="android:background">@color/item_video_background</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="TextView.VideoName" parent="TextAppearance.AppCompat">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.VideoName.Shimmer" parent="@style/Widget.Material3.CardView.Filled">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginHorizontal">4dp</item>
    </style>

    <style name="TextView.VideoDuration" parent="TextAppearance.AppCompat">
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/text_view_video_duration_text</item>
        <item name="android:background">@drawable/video_duration_background</item>
    </style>

    <style name="TextView.VideoName.PlayerView" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/text_view_video_name_player_view_text</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="Snackbar" parent="@style/Widget.Material3.Snackbar">
        <item name="backgroundTint">@color/snackbar_background</item>
    </style>

    <style name="Snackbar.TextView" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">@color/snackbar_textview_text</item>
    </style>

    <style name="Snackbar.Button" parent="@style/Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/snackbar_button_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>